<p id="notice"><%= notice %></p>

<br/><h1>Students Information</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Weight</th>
      <th>Height</th>
      <th>Color</th>
      <th>Gpa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each_with_index do |student, i| %>
      <tr>
        <td><%= (i + 1) %></td>
        <td><%= student.name %></td>
        <td><%= student.weight %></td>
        <td><%= student.height %></td>
        <td><%= student.color %></td>
        <td><%= student.gpa %></td>
        <td><%= link_to '<button>View</button>'.html_safe, student %></input></td>
        <td><%= link_to '<button>Edit</button>'.html_safe, edit_student_path(student) %></td>
        <td><%= link_to '<button>Delete</button>'.html_safe, student, method: :delete, data: { confirm: 'Are you sure you want to delete this student?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '<button class="new">New Student</button>'.html_safe, new_student_path %>
<!--<button class="form">Display</button><br>-->
<%= link_to '<button class="form">Display</button>'.html_safe, { :action => "display" }, :method => :get %>


<% @students.each do |student| %>
  <div width="<%= student.weight %>" height="<%= student.height %>" style="border:2px solid <%= student.color %>;">
    <br>Name: <font color="<%= student.color %>"><%= student.name %></font>
    <br>GPA: <%= student.gpa %>
  </div>
<% end %>
